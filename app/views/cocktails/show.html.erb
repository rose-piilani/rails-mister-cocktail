<div class="container">
  <div class="row">
    <% if @cocktail.photo? %>
      <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
    <% end %>
    <h2><%= @cocktail.name %></h2>
    <% @cocktail.doses.each do |dose| %>
      <%= dose.description %>
    <% end %>
    <hr />
    <%= link_to "Return to list of cocktails", cocktails_path %>
  </div>
</div>
